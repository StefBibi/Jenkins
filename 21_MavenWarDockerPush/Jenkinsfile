node {
   def registryProjet='registry.gitlab.com/stefbibi/xavki-21-mavenwardockerpushregistry'
   def IMAGE="${registryProjet}:version-${env.BUILD_ID}"
    stage('Clone') {
          git branch: 'main', url: 'https://github.com/StefBibi/Jenkins.git'
    }
    stage('Maven package'){
    	    sh 'pwd'
            sh 'cd ./21_MavenWarDockerPush/mywebtest'
            sh 'mvn clean package'
    }
    def img = stage('Build') {
          docker.build("$IMAGE",  './21_MavenWarDockerPush')
    }
    stage('Run') {
            img.withRun("--name run-$BUILD_ID -p 8081:8080") { c ->
            sh 'docker ps'
            sh 'netstat -ntaup'
            sh 'sleep 30s'
            sh 'curl 127.0.0.1:8081'
            sh 'docker ps'
          }
    }
    stage('Push') {
          docker.withRegistry('https://registry.gitlab.com', 'Gitlab_stephane.bibi78') {
              img.push 'latest'
              img.push()
          }
    }
}
