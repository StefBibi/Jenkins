node{
  def app

    stage('Clone') {
        checkout scm
    }

    stage('Build image') {
	sh 'pwd'
	sh 'ls -la'
	sh 'cd 19_JenkinsfileBuildImageDocker'
        sh 'ls -la'
	app = docker.build("stefbibi/nginx-jenkins-xavki19")
    }

    stage('Test image') {
        docker.image('stefbibi/nginx-jenkins-xavki19').withRun('-p 80:80') { c ->
        sh 'docker ps'
        sh 'cat /usr/share/nginx/html/index.html'
        sh 'curl localhost'
	     }
    }
}

